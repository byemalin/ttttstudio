
<!-- app/views/shared/_flashes.html.erb -->
<% if notice %>
  <div class="flash flash-notice">
    <span><%= notice %></span>
    <button class="flash-close" onclick="this.parentElement.style.display='none';">&times;</button>
  </div>
<% end %>
<% if alert %>
  <div class="flash flash-alert">
    <span><%= alert %></span>
    <button class="flash-close" onclick="this.parentElement.style.display='none';">&times;</button>
  </div>
<% end %>
